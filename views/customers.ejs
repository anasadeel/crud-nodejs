<%- include layouts/header.ejs %>
<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li class="active"><%=page_title%></li>
</ol>
<div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
<div class="pull-right">
<a href="/customers/add" class="btn btn-info">+ Add new</a>
</div><br><br>
<table class="table table-hover table-stripped">
<thead">
  <tr>
    <th>#</th>
    <th>Name</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Actions</th>
  </tr>
</thead>
<% if(data.length){ %>
<tbody>
<% for(var i = 0;i < data.length;i++) { %>
  <tr>
    <td><%=(i+1)%></td>
    <td><%=data[i].name%></td>
    <td><%=data[i].address%></td>
    <td><%=data[i].phone%></td>
    <td><%=data[i].email%></td>
    <td>
        <a class="btn btn-primary" href="../customers/edit/<%=data[i].id%>">Edit</a>

        <a class="btn btn-danger" href="../customers/delete/<%=data[i].id%>">Delete</a>

    </td>
  </tr>
</tbody>
<% }

 }else{ %>
<tr>
<td colspan="6">
<h3>No Data Found . .</h3>
</td>
</tr>
<% } %>
</table>
</div>   
<%- include layouts/footer.ejs %>