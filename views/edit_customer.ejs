<%- include layouts/header.ejs %>
<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
<li><a href="/customers">Customers</a></li>
  <li class="active"><%=page_title%></li>
</ol>
<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
<fieldset>
<form class="form-horizontal" action="/customers/edit/<%=data[0].id%>" method="post">
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input type="name" name="name" class="form-control" id="inputEmail3" value="<%=data[0].name%>" required>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <input type="email" name="email" class="form-control" id="inputEmail3" value="<%=data[0].email%>" required>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Address</label>
    <div class="col-sm-10">
<textarea name="address" class="form-control" placeholder="Address" required><%=data[0].address%></textarea>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Phone</label>
    <div class="col-sm-10">
      <input type="number" name="phone" class="form-control" id="inputEmail3" value="<%=data[0].phone%>" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12">
      <button type="submit" class="btn btn-success btn-lg pull-right">Update</button>
    </div>
  </div>
</form>
</fieldset>
 </div>     
        
<%- include layouts/footer.ejs %>
